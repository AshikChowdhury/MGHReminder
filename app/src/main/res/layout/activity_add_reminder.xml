<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="36dp"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_toEndOf="@id/repeat_type_icon"-->
<!--                    android:orientation="vertical">-->

<!--                    <EditText-->
<!--                        android:id="@+id/location"-->
